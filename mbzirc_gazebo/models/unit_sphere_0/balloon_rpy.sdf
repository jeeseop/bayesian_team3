<?xml version="1.0"?>
<robot name="my_robot">

  <!-- Cube base link -->
  <link name="base_link">
    <inertial>
      <mass value="100"/>
      <inertia ixx="1" ixy="0" ixz="0" iyy="1" iyz="0" izz="1"/>
    </inertial>
    <!--<visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>-->
    <collision>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
    </collision>
  </link>

  <gazebo reference="base_link"> 
    <material>Gazebo/White</material> 
  </gazebo>


  <!-- Joint between cube and balloon -->
  <joint name="base_joint1_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="1 0 0"/> 
    <parent link="base_link" /> 
    <child link="joint1_link"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="5"/>
    <gravity>0</gravity>
  </joint>

 <gazebo reference="base_joint1_joint"/>


  <link name="joint1_link">
  <inertial>
      <mass value="0.0001"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
   <!--<visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>-->
 </link>

 <gazebo reference="joint1_link"/>


 <joint name="joint1_joint2_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="0 1 0"/> 
    <parent link="joint1_link" /> 
    <child link="joint2_link"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="5"/>
    <!--<limit lower="0" upper="10" effort="10" velocity="5"/>-->
    <gravity>0</gravity>
  </joint>

  <gazebo reference="joint1_joint2_joint"/>


  <link name="joint2_link">
     <inertial>
      <mass value="0.0001"/>
      <inertia ixx="0.0001" ixy="0" ixz="0" iyy="0.0001" iyz="0" izz="0.0001"/>
    </inertial>
    <!--<visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <box size="0.1 0.1 0.1"/>
      </geometry>
      <material name="white"/>
    </visual>-->
 </link>

 <gazebo reference="joint2_link"/>


<joint name="balloon_joint" type="revolute">
    <origin xyz="0 0 0" rpy="0 0 0" />
    <axis xyz="0 0 1"/> 
    <parent link="joint2_link" /> 
    <child link="balloon_link"/>
    <limit lower="-1.57" upper="1.57" effort="10" velocity="5"/>
<!--<limit lower="0" upper="10" effort="10" velocity="5"/>-->
    <gravity>0</gravity>
  </joint>

  <gazebo reference="balloon_joint"/>


  <!-- Balloon link --> 
  <link name="balloon_link">
    <inertial>
      <mass value="0.01"/> 
      <inertia ixx="0.01" ixy="0" ixz="0" iyy="0.01" iyz="0" izz="0.01"/> 
    </inertial> 
    <visual> 
      <origin xyz="0 0 2" rpy="0 0 0" /> 
      <geometry> 
        <sphere radius="0.25" /> 
      </geometry> 
      <material name="red" /> 
    </visual>
    <gravity>0</gravity>
    <collision> 
       <origin xyz="0 0 2" rpy="0 0 0" /> 
      <geometry> 
        <sphere radius="0.25" /> 
      </geometry>
    </collision> 
  </link>

 <gazebo reference="balloon_link"> 
    <material>Gazebo/Red</material> 
    <gravity>1</gravity> 
  </gazebo>

</robot>
